<h1>Orders</h1>
<br />
<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <tr>
        <th>id</th>
        <th>date</th>
        <th>customer</th>
        <th>email</th>
        <th>phone</th>
        <th>total price</th>
        <th>items</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.created_at.strftime("%a, %d %b %Y") %></td>
          <td><%= link_to order.customer.full_name, customer_path(order.customer) %></td>
          <td><%= order.customer.email %></td>
          <td><%= order.customer.phone %></td>
          <td>TODO</td>
          <td>number of ordered items</td>
          <td><%= link_to "Show", order_path(order) %></td>
          <td><%= link_to "Edit", edit_order_path(order) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
