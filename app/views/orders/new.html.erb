<h1>New order for <%= @customer.full_name %></h1>
<br />
<div class="row">
  <div class="col-md-4">
    <%= form_for [@customer, @order] do |f| %>
      <div class="form-group">
        <%= f.label :notes %>
        <%= f.text_area :notes, class: 'form-control', placeholder: "Enter notes if necessary." %>
      </div>
      <div class="form-group">
        <%= f.submit "Next", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
