<h1>Search Results</h1>
<div class="row">
  <div class="col-md-12">
    <% if @results.blank? %>
      <strong>No Record Found</<strong>
        <%= link_to "New Customer", new_customer_path, class: 'btn btn-primary' %>
    <% else %>
      <table class="table table-hover">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Address</th>
          <th></th>
          <th></th>
        </tr>
        <% @results.each do |result| %>
          <tr>
            <td><%= link_to "#{result.last_name} #{result.first_name}", result %></td>
            <td><%= result.email %></td>
            <td><%= result.phone %></td>
            <td><%= "#{result.address} #{result.city} #{result.postcode}" %></td>
            <td><%= link_to "New Order", new_customer_order_path(result, Order.new), class: 'btn btn-default btn-sm' %></td>
          </tr>
        <% end %>
      </table>
    <% end %>
  </div>
</div>
