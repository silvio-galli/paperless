<h1>Add New Customer</h1>
<div class="row">
  <div class="col-md-4">
    <%= form_for @customer do |f| %>
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control', placeholder: 'Enter customer first name' %>
      </div>
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control', placeholder: 'Enter customer last name' %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control', placeholder: "Enter customer email" %>
      </div>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, class: 'form-control', placeholder: 'Enter customer address' %>
      </div>
      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city, class: 'form-control', placeholder: 'Enter customer city' %>
      </div>
      <div class="form-group">
        <%= f.label :postcode %>
        <%= f.text_field :postcode, class: 'form-control', placeholder: 'Enter customer postcode' %>
      </div>
      <div class="form-group">
        <%= f.label :country %>
        <%= f.text_field :country, class: 'form-control', placeholder: 'Enter customer country' %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
