<h1>
  Customers
  <small class="pull-right">
    <%= link_to "New Customer", new_customer_path, class: 'btn btn-primary' %>
  </small>
</h1>
<br />
<div class="row">
  <div class="col-md-6">
    <div class='search-box'>
      <%= form_tag search_path, method: :get do %>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-search"></i>
            </span>
            <%= text_field_tag 'keyword', nil, autofocus: true, class: 'form-control', placeholder: 'Search Customer: last name or email or phone' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Address</th>
        <th>orders</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= link_to "#{customer.last_name} #{customer.first_name}", customer %></td>
          <td><%= customer.email %></td>
          <td><%= customer.phone %></td>
          <td>
            <%= "#{customer.address}, #{customer.city} #{customer.postcode} (#{customer.country})" %>
          </td>
          <td><%= customer.orders.count %></td>
          <td><%= link_to "Show", customer_path(customer) %></td>
          <td><%= link_to "Edit", edit_customer_path(customer) %></td>
          <td><%= link_to "New Order", new_customer_order_path(customer, Order.new), class: 'btn btn-default btn-sm' %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
