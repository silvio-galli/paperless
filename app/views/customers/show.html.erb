<h1>
  <%= "#{@customer.first_name} #{@customer.last_name}" %>
  <small class="pull-right">
    <%= link_to "New Order", new_customer_order_path(@customer, Order.new), class: 'btn btn-primary' %>
  </small>
</h1>
<br />
<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <tr>
        <th>Email</th>
        <th>Phone</th>
        <th>Address</th>
      </tr>
      <tr>
        <td><%= @customer.email %></td>
        <td><%= @customer.phone %></td>
        <td>
          <%= "#{@customer.address}, #{@customer.city} #{@customer.postcode} (#{@customer.country})" %>
        </td>
      </tr>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <h2>Orders history</h2>
    <table class="table table-hover">
      <tr>
        <th>id</th>
        <th>date</th>
        <th>total price</th>
        <th>items</th>
        <th>notes</th>
        <th></th>
      </tr>
      <% @customer.orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.created_at.strftime("%a, %d %b %Y") %></td>
          <td><%= calculate_total_price(order) %> &euro;</td>
          <td><%= calculate_total_items(order) %></td>
          <td><%= order.notes %></td>
          <td><%= link_to "Show", order_path(order), class: 'btn btn-primary btn-xs' %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
