<h1><%= t '.title' %></h1>
<div class="row">
  <div class="col-md-4">
    <%= form_for @product do |f| %>
      <% if @product.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= t('errors', :count => @product.errors.count) %></h4>
          <ul>
            <% @product.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :initiative %>
        <%= f.text_field :initiative, class: 'form-control', placeholder: true %>
      </div>
      <div class="form-group">
        <%= f.label :local_code %>
        <%= f.text_field :local_code, class: 'form-control', placeholder: true %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control', placeholder: true %>
      </div>
      <div class="form-group">
        <%= f.label :barcode %>
        <%= f.text_field :barcode, class: 'form-control', placeholder: true %>
      </div>
      <div class="form-group">
        <%= f.label :default_price %>
        <%= f.number_field :default_price, in: 0.01..9999.99, step: 0.01, class: 'form-control', placeholder: true %>
      </div>
      <div class="form-group">
        <%= f.label :promo_price %>
        <%= f.number_field :promo_price, in: 0.01..9999.99, step: 0.01, class: 'form-control', placeholder: true %>
      </div>
      <div class="form-group">
        <%= f.label :quantity %>
        <%= f.number_field :quantity, class: 'form-control', placeholder: true %>
      </div>
      <div class="form-group">
        <%= f.radio_button(:status, "arriving", checked: true) %>
        <%= f.label(:status, t('.arriving')) %>
        <%= f.radio_button(:status, "in_stock") %>
        <%= f.label(:status, t('.in_stock')) %>
      </div>
      <div class="form-group">
        <%= f.label :arriving_date %>
        <%= f.datetime_field :arriving_date, class: 'form-control', placeholder: true %>
      </div>
      <div class="form-group">
        <%= f.submit t('.save'), class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
