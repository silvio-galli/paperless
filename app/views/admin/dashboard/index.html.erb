<h1>Admin Dashboard</h1>
<br />
<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="panel-title">Users List</h1>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <th>id</th>
            <th>name</th>
            <th></th>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Change password", edit_admin_user_path(user) %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
