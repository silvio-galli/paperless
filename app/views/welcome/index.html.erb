<% if current_user && current_user.admin? %>
	<br />
	<div class="row">
		<div class="col-md-12">
			<%= link_to "Admin Panel", admin_dashboard_path, class: 'btn btn-primary' %>
		</div>
	</div>
<% end %>
<% if current_user %>
	<br />
	<div class="row">
		<div class="col-md-6">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h1 class="panel-title">
						Products Report
						<small class="pull-right"><%= link_to "View All Products", products_path %></small>
					</h1>
				</div>
				<div class="panel-body">
					<table class="table table-striped">
						<thead>
							<tr>
				        <th>Initiative</th>
				        <th>Description</th>
								<th>Status</th>
				        <th>Available Quantity</th>
				        <th>Arriving date</th>
								<th>&nbsp;</th>
				      </tr>
						</thead>
						<tbody>
				      <% @products.each do |product| %>
				        <tr>
				          <td><%= product.initiative %></td>
				          <td><%= link_to product.description, product %></td>
									<td><%= product_status_label(product, product.arriving_date) %></td>
				          <td class="quantity"><%= check_product_availability(product) %></td>
				          <td><%= product.arriving_date ? product.arriving_date.strftime("%a, %d %b %Y") : "nil" %></td>
									<%= render partial: "products/arrived_button", locals: { product: product } %>
				        </tr>
				      <% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h1 class="panel-title">
						Orders Report - opened orders
						<small class="pull-right"><%= link_to "View All Orders", orders_path %></small>
					</h1>
				</div>
				<div class="panel-body">
					<table class="table table-striped">
						<tr>
			        <th>id</th>
							<th>status</th>
			        <th>date</th>
			        <th>customer</th>
			        <th>total price</th>
			        <th></th>
							<th></th>
			      </tr>
			      <% @orders.each do |order| %>
			        <tr>
			          <td><%= link_to "# #{order.id}", order_path(order) %></td>
								<td><%= order_status_label(order) %></td>
			          <td><%= order.created_at.strftime("%a, %d %b %Y") %></td>
			          <td><%= link_to order.customer.full_name, customer_path(order.customer) %></td>
			          <td><%= calculate_total_price(order) %> &euro;</td>
			          <td><%= link_to "Show", order_path(order) %></td>
								<%= render partial: "orders/close_button", locals: { order: order } %>
			        </tr>
			      <% end %>
					</table>
				</div>
			</div>
		</div>
	</div>
<% else %>
	<br />
	<div class="jumbotron">
		<h1>PaperLess</h1>
		<p class="lead">Manage your products, customers and customers' orders.</p>
	</div>
<% end %>
